<%= simple_form_for(@chrip) do |f| %>
<%= f.error_notification %>
<div class="field">
  <div class="control">
  <%= f.input :chirp, label: "Chirp about it", input_html: {class: "textarea "}, wrapper: false, label_html: {class: "label"}, placeholder: "Send a Chirp!" %>
  </div>
</div>
<%= f.button :submit, class: "button is-info" %>
<% end %>